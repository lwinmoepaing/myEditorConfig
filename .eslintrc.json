{
	"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
	},
	"rules": {
			"indent": [
					"error",
					"tab"
			],
			"linebreak-style": [
					"error",
					"unix"
			],
			"semi": [
					"error",
					"always"
			],
			"no-console": "error",
			"no-multiple-empty-lines": "warn",
			"no-var": "error",
			"prefer-const": "error",
			"prettier/prettier": [
				"error",
				{
					"semi": true,
					"singleQuote": true,
					"tabWidth": 2
				}
			]
	},
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"es6": true,
		"commonjs": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"plugins": [
		"prettier"
	]
}
